{
  "name": "api-autokirim",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --minify --sourcemap --target=bun --format=esm --entry-naming=\"[name].js\"",
    "build:execute": "bun build src/index.ts --compile --minify --sourcemap --outfile dist/app",
    "migrate:init": "bunx prisma migrate dev --name init && bunx prisma generate",
    "migrate:add": "bunx prisma migrate dev --name modified && bunx prisma generate",
    "migrate:reset": "bunx prisma migrate reset && bunx prisma generate",
    "seed": "bunx ts-node src/config/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^7.1.0",
    "axios": "^1.13.2",
    "express": "^5.1.0",
    "hono": "^4.10.5",
    "mssql": "^12.1.0",
    "prisma": "^7.1.0",
    "winston": "^3.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bun": "latest"
  }
}
